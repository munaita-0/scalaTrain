# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
#GET     /user/entry       controllers.UserController.entryInit
#POST    /user/entry       controllers.UserController.entrySubmit
GET     /find             controllers.UserController.find
GET     /findAll             controllers.UserController.findAll
GET     /create           controllers.UserController.create
GET     /destroy         controllers.UserController.destroy

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
